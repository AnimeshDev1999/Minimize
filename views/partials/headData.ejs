<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<script src="https://cdn.tailwindcss.com"></script>
<style type="text/tailwindcss">
  @layer base {
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      color: #cbd5e1;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }
    html,
    body {
      height: 100%;
    }
    body {
      background: #1f1f1f;
      -ms-overflow-style: none;
    }
    body::-webkit-scrollbar {
      display: none;
    }
    html {
      scroll-behavior: smooth;
      scrollbar-width: none;
    }
    .under-eff {
      @apply h-[2px] bg-[#eee] w-[0%] group-hover:w-[100%] duration-300;
    }
    .table-head {
      @apply underline font-semibold underline-offset-4;
    }
    .btn-anim {
      @apply text-slate-300 font-semibold rounded-md bg-none hover:bg-cyan-500 hover:text-slate-800 duration-300 ring-2 ring-cyan-900;
    }
    .slider-div {
      @apply -translate-y-[120%];
    }
    .slider-div-active {
      @apply -translate-y-[0%];
    }
  }
</style>
<script>
  const tabToggler = () => {
    document.querySelector(".slider-div").classList.toggle("slider-div-active");
  };
</script>
